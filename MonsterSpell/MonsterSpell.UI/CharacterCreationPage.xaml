<Page x:Class="MonsterSpell.UI.CharacterCreationPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  mc:Ignorable="d" 
	  d:DesignHeight="800" d:DesignWidth="600"
      Title="CharacterCreationPage">
    <Page.Resources>
        <Style TargetType="Grid">
            <Style.Resources>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Hidden"/>
                    <Style.Triggers>
                        <Trigger Property="Visibility" Value="Visible">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
							From="0.0" To="1.0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>
    <Grid>
        <Rectangle StrokeThickness="4">
            <Rectangle.Fill>
                <ImageBrush Stretch="UniformToFill" ImageSource=".\Images\coniferous-forest.jpg" />
            </Rectangle.Fill>
        </Rectangle>
        <Image Source="Images/Mage.jpg" Width="160" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25"/>
        <TextBlock Width="160" HorizontalAlignment="Left" Height="50" Margin="25,538,0,212" FontSize="30" TextAlignment="Center"> Mage</TextBlock>
        <Image Source="Images/Warrior.jpg" Width="200" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Width="160" HorizontalAlignment="Left" Height="50" Margin="400,536,0,214" FontSize="30" TextAlignment="Center"> Warrior</TextBlock>
        <Label Content="Select class" HorizontalAlignment="Center" FontFamily="Segoe Print" FontSize="20" FontWeight="ExtraBold"/>


        <Label Content="Character name" HorizontalAlignment="Left"
			   VerticalAlignment="Bottom" Margin="40 0 0 35"
			   FontFamily="Segoe Print" FontSize="15" FontWeight="ExtraBold">

        </Label>
        <Button Content="Create class" FontSize="20"
				Width="181" Height="28" VerticalAlignment="Bottom"
				HorizontalAlignment="Center"
                Margin="0 0 0 10"
				Click="OnCreateCharacterClicked"/>
    </Grid>
</Page>
